<div class="user_setup_content col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-2 ">

  <%= render "common/flashes" %>
  <div>
    <h2 class="text-center", style="color:#0097A7;;">用户登录</h2>
  </div>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
        <%= f.input :email, label: "邮箱", required: false, autofocus: true ,placeholder: "请输入有效邮箱"%>
        <%= f.input :password, label: "密码", required: false ,placeholder: "至少六位字符长度"%>
        <%= f.input :remember_me, label: "记住密码", as: :boolean if devise_mapping.rememberable? %>
    </div>
    <div class="form-actions">
        <%= f.button :submit, "登录", class: "btn btn-primary",:style => "border: none;color:white;width:100%;background-color:#0097A7;border-radius:50px;" %>
    </div>
          <%= render "devise/shared/links" %>
  <% end %>

</div>
